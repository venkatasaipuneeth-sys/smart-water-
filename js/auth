// auth.js - Smooth transitions for auth UI

document.addEventListener('DOMContentLoaded', function() {
    // Fade in animation is handled by CSS
    // Add transition for switching between login/register
    const links = document.querySelectorAll('.animated-link');
    links.forEach(link => {
        link.addEventListener('click', function(e) {
            document.querySelector('.auth-card').classList.add('fadeOutUp');
        });
    });
});
